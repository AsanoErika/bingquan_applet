@import "../../style/weui.wxss";

page {
  background: url("https://www.bingquannet.com/public/image/weapp/bg.jpg") no-repeat 0px 0px;
  background-size: cover;
  height: 100%;
}

.logo-box {
  width: 100%;
  height: 350rpx;
  background-color: #b20000;
  color: #fff;
  text-align: center;
  font-size: 80rpx;
  font-weight: bold;
  line-height: 300rpx;
}

.slogan {
  width: 80%;
  height: 80px;
}

.userinfo {
  margin-top: -120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 2px solid #fff;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 32rpx;
}

.usermotto {
  margin-top: 200px;
}

.enter-btn {
  width: 50%;
  margin-top: 20px;
}

.btn-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 50rpx 0;
  box-sizing: border-box;
}

.shelf-enter-btn {
  background-color: #b20000;
}

.starbar-enter-btn {
  background-color: #b20000;
}

.discover-enter-btn {
  background-color: #b20000;
}

.text-white {
  color: #fff;
}

.enter-box {
  position: fixed;
  bottom: 6em;
  left: 0;
  right: 0;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 50rpx 0;
  box-sizing: border-box;
}

.enter-btn {
  padding: 10px 10px;
  background-color: #b20000;
  color: #fff;
  border-radius: 100px;
  box-shadow: 0px 0px 10px #8b5a32;
}
