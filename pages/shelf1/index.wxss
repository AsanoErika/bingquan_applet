@import "../../style/weui.wxss";

.scan-box {
  position: fixed;
  right: 50rpx;
  bottom: 150rpx;
  z-index: 50;
  width: 40rpx;
  height: 40rpx;
  background: #b20000;
  display: flex;
  flex-direction: column;
  padding: 25rpx;
  border-radius: 50%;
  box-shadow: 0px 0px 10px #888;
}

.scan-img {
  width: 40rpx;
  height: 40rpx;
}

.search-box {
